--- 
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import LandscapeImage from '../components/shared/LandscapeImage.astro';

import { PAGE_MAX_WIDTH } from '../constants/styles';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - ðŸ“šMyLibrary</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400&display=swap" rel="stylesheet">
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<main>
			<LandscapeImage />
			<div class={`${PAGE_MAX_WIDTH} mx-auto my-16 xs:px-8 md:px-0 relative z-50`}>
				<slot />
			</div>
		</main>
	</body>
</html>

<style>
	body {
		position: relative;
	}
</style>
