---
import Layout from '../layouts/Layout.astro';

import { PAGE_MAX_WIDTH } from '../constants/styles';

const title = 'Prosas Apátridas'
const author = 'Julio Ramón Ribeyro'
const publish_date = '1978'
const cover = 'https://ia600602.us.archive.org/view_archive.php?archive=/24/items/olcovers444/olcovers444-L.zip&file=4444146-L.jpg'

---

<Layout title="Home">
	<div class={`${PAGE_MAX_WIDTH} mx-auto mt-10`}>
			<img src={cover} alt="" transition:name={`book-cover-${0}`}>
			<h2>{title}</h2>
			<p>{author}</p>
			<p>{publish_date}</p>
	</div>
</Layout>
